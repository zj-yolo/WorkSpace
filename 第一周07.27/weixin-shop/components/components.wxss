.marquee_wp{
  width:70%;
  margin: 0 auto;
  display: flex;
  flex-wrap: wrap;
  background:#FD3324;
  padding:28rpx;
  border-radius: 10rpx;
  overflow: hidden;
  position:relative;
}

.marquee_wp .marquee_wp_circle_circle {
  position: absolute;
  display: block;
  border-radius: 50%;
  height: 20rpx;
  width: 20rpx;
}



