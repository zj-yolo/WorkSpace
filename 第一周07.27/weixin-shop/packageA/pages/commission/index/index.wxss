.wrapper{
  padding-bottom: 110rpx;
  font-size: 30rpx;
}
.cate{
  padding: 0 20rpx;
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  box-sizing: border-box;
  color: #8b8b8b;
  background: #f5f5f5;
}
.scrollView{
  width: 100%;
  white-space: nowrap;
}
.cate__item{
  display: inline-block;
  margin-right: 30rpx;
  padding: 0 20rpx;
  height: 50rpx;
  line-height: 50rpx;
  font-size: 28rpx;
}
.cate__item:last-child{
  margin: 0;
}
.cateActive{
  background: #e50b0b;
  color: #fff;
  border-radius: 26rpx;
}
.list__item{
  display: flex;
  padding: 20rpx;
  width: 100%;
  box-sizing: border-box;
  border-bottom: 1px solid #f5f5f5;
}
.item__image{
  margin-right: 30rpx;
  width: 208rpx;
  height: 208rpx;
  border-radius: 10rpx;
}
.list__content{
  display: flex;
  width: calc(100% - 238rpx);
  flex-direction: column;
  justify-content: space-between;
}
.title{
  display: -webkit-box;
  overflow: hidden;
  margin-bottom: 14rpx;
  width: 100%;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  line-height: 1.5;
}
.price{
  font-size: 30rpx;
  font-weight: 600;
  color: #e71b1b;
}
.option{
  overflow: hidden;
  margin-bottom: 10rpx;
  width: 100%;
  white-space: nowrap;
  text-overflow: ellipsis;
  font-size: 25rpx;
  color: #adadad;
}
.figure__wrapper{
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.label{
  font-size: 25rpx;
  color: #adadad;
}
.item__btn{
  width: 124rpx;
  height: 54rpx;
  line-height: 54rpx;
  text-align: center;
  font-size: 28rpx;
  border-radius: 26rpx;
  color: #fff;
  background: linear-gradient(to right, #fe2f5d, #ff0913);
}
.operate{
  position: fixed;
  display: flex;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 100rpx;
  font-size: 30rpx;
  align-items: center;
  box-shadow: 0 -1px 5px #eee;
}
.rule{
  display: flex;
  width: 268rpx;
  height: 100%;
  justify-content: center;
  align-items: center;
  background: #fff;
}
.icon__rule{
  margin-right: 16rpx;
  width: 28rpx;
  height: 28rpx;
}
.btn__all{
  flex: 1;
  height: 100%;
  line-height: 100rpx;
  text-align: center;
  color: #fff;
  background: #e50b0b;
}
.custom__modal{
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  font-size: 30rpx;
  background: rgba(0, 0, 0, .4);
  z-index: 10;
}
.wrapper__share{
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  background: #fff;
}
.title__share{
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  background: #f5f5f5;
  text-align: center;
}
.modal__content{
  padding: 30rpx 0 70rpx;
  width: 100%;
  border-bottom: 1px solid #f5f5f5;
}
.label__share{
  margin-bottom: 20rpx;
  text-align: center;
  color: #6c6c6c;
}
.share__menu{
  display: flex;
  margin-top: 40rpx;
}
.menu__item{
  display: flex;
  width: 50%;
  flex-direction: column;
  align-items: center;
}
.icon__container{
  display: flex;
  margin-bottom: 20rpx;
  width: 96rpx;
  height: 96rpx;
  justify-content: center;
  align-items: center;
  border-radius: 50%;
  border: 1px solid #e5e5e5;
}
button.icon__container{
  padding: 0;
  background: #fff;
}
button.icon__container::after{
  display: none
}
.icon__menu{
  width: 64rpx;
  height: 64rpx;
  vertical-align: middle;
}
.btn__cancel{
  width: 100%;
  height: 86rpx;
  line-height: 86rpx;
  text-align: center;
}
.noGoods{
  margin-top: 220rpx;
  text-align: center;
  color: #aaa;
}
.icon__no-goods{
  margin-bottom: 20rpx;
  width: 150rpx;
  height: 150rpx;
}