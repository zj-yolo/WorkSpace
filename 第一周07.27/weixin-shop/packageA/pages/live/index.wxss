page{
  background: #f5f5f5;
}
.liveStreaming{
  padding: 20rpx;
  width: 100%;
  box-sizing: border-box;
}
.liveList{
  width: 100%;
}
.liveItem{
  display: flex;
  margin-bottom: 26rpx;
  background: #fff;
  border-radius: 10rpx;
}
.liveItem:last-child{
  margin-bottom: 0;
}
.mainImage{
  position: relative;
  width: 302rpx;
  height: 302rpx;
}
.liveImage{
  width: 100%;
  height: 100%;
  border-radius: 10rpx;
  vertical-align: middle;
}
.hots{
  position: absolute;
  display: flex;
  padding-left: 20rpx;
  left: 0;
  top: 20rpx;
  width: 100%;
  align-items: center;
  box-sizing: border-box;
}
.hotsImage{
  width: 38rpx;
  height: 38rpx;
  border-radius: 50%;
  z-index: 10;
}
.hotsFigure{
  margin-left: -6rpx;
  padding: 4rpx 16rpx 4rpx 10rpx;
  font-size: 14rpx;
  background: #b6b6b5;
  border-radius: 0 20rpx 20rpx 0;
  color: #fff;
}
.liveInfo{
  display: flex;
  flex-direction: column;
  padding: 24rpx;
  width: calc(100% - 302rpx);
  /* justify-content: space-between; */
  /* height: 160rpx; */
  box-sizing: border-box;
}
.liveTitle{
  display: -webkit-box;
  overflow: hidden;
  width: 100%;
  line-height: 2em;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  font-size: 28rpx;
  font-weight: 600;
}
.shopInfo{
  height: 160rpx;
}
.shopLogo{
  margin-right: 8rpx;
  width: 42rpx;
  height: 42rpx;
  border: 1px solid #d8d8d8;
  border-radius: 50%;
}
.shopName{
  overflow: hidden;
  flex: 1;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-size: 24rpx;
  font-weight: 600;
}
.goodsList{
  display: flex;
  align-items: center;
}
.imageWrap{
  position: relative;
  margin-right: calc((100% - 300rpx) / 2);
  width: 100rpx;
  height: 100rpx;
}
.imageWrap:last-child{
  margin-right: 0;
}
.bg{
  position: absolute;
  width: 100%;
  height: 100%;
  left: 0;
  top: 0;
  background: rgba(0, 0, 0, .25);
  border-radius: 16rpx;
}
.goodsPrice{
  position: absolute;
  padding-left: 10rpx;
  left: 0;
  bottom: 10rpx;
  overflow: hidden;
  width: 100%;
  white-space: nowrap;
  text-overflow: ellipsis;
  font-size: 24rpx;
  box-sizing: border-box;
  color: #fff;
}
.goodsImage{
  width: 100rpx;
  height: 100rpx;
  border-radius: 16rpx;
}