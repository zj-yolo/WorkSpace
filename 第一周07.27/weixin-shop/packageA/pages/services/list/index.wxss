page{background:#fff;width:100%;height:100%;}
.order-item{background:#fff;border-bottom:20rpx solid #F4F4F4;}
.order-item:last-child{margin-bottom:0}
.order-footer{padding:20rpx 0;display:flex;flex-direction:row;justify-content:flex-end;margin-right:20rpx;border-bottom:1px solid #fff;align-items:center;overflow:hidden}
.order-footer text{font-size:28rpx;line-height: 65rpx;height: 65rpx;}
.carts-item{display:flex;flex-direction:row;height:150rpx;width:720rpx;border-bottom:0px solid #fff;padding:30rpx 0 10rpx 20rpx}
.carts-image{width:150rpx;height:150rpx}
.carts-text{margin-left:10rpx;display:flex;flex-direction:column;justify-content:flex-start}
.btn-pay{margin-bottom:5rpx;padding-left:30rpx;padding-right:30rpx;font-size:27rpx;color:#E62323;border:1rpx solid #E62323;align-self:flex-end;border-radius:35rpx;margin-left:20rpx}
.btn-cancel{margin-bottom:5rpx;padding-left:30rpx;padding-right:30rpx;font-size:27rpx;color:gray;border-color:gray;border-width:1rpx;border-style:solid;background:#fff;align-self:flex-end;border-radius:35rpx}
.carts-title{font-size:28rpx;color:#444;line-height:38rpx}
.carts-subtitle{margin-top:20rpx;font-size:25rpx;color:#a9a9a9;padding:0 0rpx;display:flex;flex-direction:row;justify-content:space-between}
.carts-price{color:#383838;font-size:27rpx;line-height:22px;width:50%;}
.carts-num{color:#383838;font-size:28rpx;line-height:22px;width:50%;text-align: right;}
.carts-right{display:flex;height:110rpx;justify-content:space-around;flex-direction:row;align-items:flex-end;margin-right:20rpx}
.view-title{height:80rpx;display:flex;flex-direction:row;align-items:center;line-height:80rpx;justify-content: space-between;padding:0 20rpx;}
.view-title .store{font-size: 29rpx;}
.view-title .pay_status{font-size: 25rpx;color:#E71B1B;}
.class-tab{display:flex;flex-direction:row;margin-top:0rpx;justify-content:center;background:#fff;width:750rpx;border-bottom:3px solid #eee}
.text-select{width:140rpx;font-size:30rpx;color:red;line-height:60rpx;height:60rpx;border-bottom-width:6rpx;border-color:red;border-style:solid;text-align:center;border-top-width:0;border-left-width:0;border-right-width:0}
.text-normal{width:140rpx;font-size:30rpx;color:#4d4d4d;height:60rpx;line-height:60rpx;border-bottom-width:0;border-color:red;border-style:solid;text-align:center;border-top-width:0;border-left-width:0;border-right-width:0}
.noInfo{width:100%; height:915rpx; font-size:32rpx; color:#ff6a6a; z-index:100; text-align:center; border-radius: 10rpx; }
.noInfo image{margin-top:210rpx; text-align:center; width:300rpx; height:335rpx; margin-bottom:40rpx; }

.slide{
	display: flex;flex-direction: row;border-bottom: 1rpx solid #F0F0F0;
}
.slide_item{
	width:20%;line-height: 80rpx;text-align: center;font-size: 24rpx;
}
.slide_item_select{
	border-bottom:1rpx solid #E62828;color: #E62828;
}

.time{
	padding:0 20rpx;font-size: 25rpx;line-height: 50rpx;color:#919191;
}



.delete{
	width:100%;height: 100%;position: fixed;top: 0;left: 0;background-color: rgba(0,0,0,0.2);
}

.d_block{
	position: absolute;bottom: 0;width:100%;font-size: 25rpx;background:#fff;
}
.d_titile{
	line-height: 100rpx;text-align: center;position: relative;
}

.d_item{
	line-height: 100rpx;margin: 0 20rpx;border-bottom: 1rpx solid #ECECEC;position: relative;
}
.btn{
	background-color: #E50B0B;color:#fff;
}

.d_img{
	width:40rpx;height: 40rpx;position: absolute;right:20rpx;top: 30rpx;
}