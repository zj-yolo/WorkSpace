<view class="content">
    <view class="title">{{data.advname}}</view>
    <view class="wrap">
        <view>{{data.create_time}}</view>
        <view>浏览<text> {{data.read_time}}</text></view>
    </view>

    <button class='share' open-type='share'><image src='http://tws.cnweisou.com/images/goodsShare.png'></image><view>分享</view></button>
    <view class="video_wrap">
        <video custom-cache="{{false}}" src="{{data.link}}" poster="{{data.thumb}}" objectFit="contain" style="width:100%;" controls></video>
    </view>
    <rich-text nodes="{{data.detail}}"></rich-text>
</view>