.addAddress .warnText {
  padding: 6rpx 21rpx;
  font-size: 26rpx;
  color: #dc8803;
  line-height: 48rpx;
}

.warntextbox {
  display: flex;
  background: #fff8d8;
}

.warntextbox image {
  width: 44rpx;
  height: 26rpx;
  margin-left: 30rpx;
  margin-top: 30rpx;
}

.listItem {
  display: flex;
  justify-content: flex-start;
  align-items: center;
  padding: 20rpx;
  font-size: 28rpx;
  border-bottom: 1px solid #eee;
}

.listItem .userInfo {
  width: 24%;
  height: 52rpx;
  line-height: 52rpx;
}

.inputInfo {
  width: 95%;
  height: 52rpx;
  line-height: 52rpx;
}

/* 选择城市 */

.selectCity {
  position: relative;
  padding-right: 45rpx;
  width: 74%;
  line-height: 52rpx;
}

/* 图标 */

.arrows {
  position: absolute;
  right: 4rpx;
  bottom: 0;
  top: 0;
  width: 25rpx;
  height: 25rpx;
  z-index: 0;
}

.arrows image {
  width: 70%;
  height: 100%;
  vertical-align: middle;
}

/* 详细地址 */

.detailAddressItem {
  display: block;
}

.detailAddress {
  margin-bottom: 4rpx;
}

.inputDetailAddress {
  width: 100%;
  height: 52rpx;
  line-height: 52rpx;
  font-size: 28rpx;
}

/* 设置默认 */

.setDefault {
  padding: 20rpx;
  font-size: 28rpx;
}

.setDefault .circle {
  display: inline-block;
  position: relative;
  margin-right: 15rpx;
  width: 30rpx;
  height: 30rpx;
  border: 2px solid #969696;
  border-radius: 50%;
  vertical-align: middle;
}

.setDefault .circleActive {
  border: 2px solid #e50b0b;
}

.dot {
  position: absolute;
  left: 50%;
  top: 50%;
  width: 20rpx;
  height: 20rpx;
  transform: translate(-50%, -50%);
  border-radius: 50%;
  background: #e50b0b;
}
.notdot {
  background:#969696;
}

.setDefault text {
  vertical-align: middle;
}

/* 操作按钮 */

.submitBtn {
  position: fixed;
  bottom: 0;
  padding: 25rpx 0;
  width: 100%;
  text-align: center;
  color: #fff;
  font-size: 28rpx;
  background: #656295;
}

.submitHover {
  background-color: #5e5c8b;
}

.operateBtn {
  position: fixed;
  bottom: 30rpx;
  left: 50%;
  transform: translateX(-50%);
  height: 90rpx;
  width: 690rpx;
  color: #fff;
  font-size: 28rpx;
  text-align: center;
  line-height: 90rpx;
  background-color: #e50b0b;
  border-radius: 5rpx;
}
.operateBtnBgc{
  background-color: #fff;
  color: #e50b0b;
  border: 3rpx solid #e50b0b;
}


