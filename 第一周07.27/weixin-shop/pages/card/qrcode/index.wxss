page{
  background: #eee;
}
.sharelunbo {
  width: 100%;
}

.imgshare {
  display: flex;
  height: 100%;
  align-items: center;
}

.poster{
  width: 340px;
  min-height: 367px;
  margin: 0 auto;
  padding-bottom: 20px;
  border-radius: 10px;
  overflow: hidden;
  margin-top: 30px;
  box-shadow: 0px 0px 15px 3px #eee;
  position: relative;
  background: #fff;
  text-align: center;
}
.qrcodeContainer{
  display: flex;
  margin: 0 auto;
  width: 300px;
  height: 300px;
  justify-content: center;
  align-items: center;
  background: url('http://boweisou.oss-cn-shenzhen.aliyuncs.com/5G/weixin.png');
  background-size: 100% 100%;
}
.qrcode{
  width: 188px;
  height: 188px;
}
.userInfo{
  display: flex;
  padding: 50rpx 50rpx;
  width: 100%;
  box-sizing: border-box;
  align-items: center;
  text-align: left;
}
.avatar{
  margin-right: 22rpx;
  width: 130rpx;
  height: 130rpx;
  border-radius: 50%;
}
.username{
  margin-bottom: 12rpx;
  font-size: 32rpx;
}
.role{
  font-size: 28rpx;
}